<h1>Lista de fiestas</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Fecha</th>
      <th>Nombre Cliente</th>
      <th>Numero de paquete</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fiesta.each do |fiestum| %>
      <tr>
        <td><%= fiestum.id_fiesta %></td>
        <td><%= fiestum.fecha %></td>
        <td><%= Cliente.where('id_cliente' => fiestum.id_cliente)[0].Nombre %></td>
        <td><%= fiestum.id_paquete %></td>
        <td><%= link_to 'Ver', fiestum %></td>
        <td><%= link_to 'Editar', edit_fiestum_path(fiestum) %></td>
        <td><%= link_to 'Eliminar', fiestum, method: :delete, data: { confirm: 'Estas seguro que desea elimiar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Fiesta', new_fiestum_path %>
