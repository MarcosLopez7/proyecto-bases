<h1>Lista de clientes</h1>
<% arreglo_clientes = [] %>
<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.Nombre %></td>
        <td><%= link_to 'Lista', cliente %></td>
        <td><%= link_to 'Editar', edit_cliente_path(cliente) %></td>
        <td><%= link_to 'Eliminar', cliente, method: :delete, data: { confirm: 'Estas seguro que desea elimiar?' } %></td>
        <% arreglo_clientes<<[cliente.Nombre, cliente.id_cliente] %>
      </tr>
      
    <% end %>
    <tr>
      <td><%= select_tag "Clientes", options_for_select(arreglo_clientes, 2) %></td>
    </tr>
  </tbody>
</table>

<br>

<%= link_to 'Agregar cliente', new_cliente_path %>
